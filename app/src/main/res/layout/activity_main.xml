<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@drawable/logo"
        android:contentDescription="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/empresa_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/menu_empresa"
        android:contentDescription="@drawable/menu_empresa"
        app:layout_constraintStart_toStartOf="@+id/logo_id"
        app:layout_constraintTop_toBottomOf="@+id/logo_id"
        app:srcCompat="@drawable/menu_empresa" />

    <ImageView
        android:id="@+id/servicos_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/menu_servico"
        android:contentDescription="@drawable/menu_servico"
        app:layout_constraintEnd_toEndOf="@+id/logo_id"
        app:layout_constraintTop_toTopOf="@+id/empresa_id"
        app:srcCompat="@drawable/menu_servico" />

    <ImageView
        android:id="@+id/contato_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="@drawable/menu_contato"
        android:contentDescription="@drawable/menu_contato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/empresa_id"
        app:layout_constraintStart_toStartOf="@+id/empresa_id"
        app:srcCompat="@drawable/menu_contato" />

    <ImageView
        android:id="@+id/clientes_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="@drawable/menu_cliente"
        android:contentDescription="@drawable/menu_cliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/servicos_id"
        app:layout_constraintStart_toStartOf="@+id/servicos_id"
        app:srcCompat="@drawable/menu_cliente" />

</android.support.constraint.ConstraintLayout>